{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (YouTube/Vimeo)",
      "default": "https://www.youtube.com/embed/your-video-id"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Experience the Future"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subheading",
      "default": "Discover our revolutionary product"
    },
    {
      "type": "color",
      "id": "accent_color",
      "label": "Accent Color",
      "default": "#0047AB"
    }
  ],
  "presets": [
    {
      "name": "Hero Section"
    }
  ]
}
{% endschema %}

<section class="hero-section" style="--accent-color: {{ settings.accent_color }}">
  <div class="hero-content">
    <div class="video-container">
      <iframe 
        src="{{ settings.video_url }}"
        frameborder="0"
        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
        allowfullscreen
        title="Product Video Testimonial">
      </iframe>
    </div>
    
    <div class="hero-text">
      <h1>{{ settings.heading }}</h1>
      <p>{{ settings.subheading }}</p>
      <a href="#product-details" class="cta-button">Discover More</a>
    </div>
  </div>
</section>

<style>
.hero-section {
  min-height: 100vh;
  background: #ffffff;
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hero-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
  z-index: 1;
}

.video-container {
  position: relative;
  width: 100%;
  max-width: 800px;
  margin: 0 auto 2rem;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0, 71, 171, 0.1);
}

.video-container::before {
  content: '';
  display: block;
  padding-top: 56.25%; /* 16:9 Aspect Ratio */
}

.video-container iframe {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.hero-text h1 {
  font-family: 'Orbitron', sans-serif;
  font-size: 3.5rem;
  color: var(--accent-color);
  margin-bottom: 1rem;
  line-height: 1.2;
}

.hero-text p {
  font-family: 'Inter', sans-serif;
  font-size: 1.25rem;
  color: #666;
  margin-bottom: 2rem;
}

.cta-button {
  display: inline-block;
  padding: 1rem 2rem;
  background: var(--accent-color);
  color: white;
  text-decoration: none;
  border-radius: 30px;
  font-family: 'Orbitron', sans-serif;
  font-weight: 500;
  transition: all 0.3s ease;
  border: 2px solid transparent;
}

.cta-button:hover {
  background: transparent;
  color: var(--accent-color);
  border-color: var(--accent-color);
  transform: translateY(-2px);
  box-shadow: 0 5px 15px rgba(0, 71, 171, 0.2);
}

@media (max-width: 768px) {
  .hero-text h1 {
    font-size: 2.5rem;
  }
  
  .hero-text p {
    font-size: 1rem;
  }
  
  .video-container {
    margin-bottom: 1.5rem;
  }
}
</style> 